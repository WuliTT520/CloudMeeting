<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        tools:context=".activity.MineFragment">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="个人中心"
                android:textColor="@color/light"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/workNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/light" />

            <TextView
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/light"

                android:singleLine="true"
                android:maxEms="24"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/people_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="个人信息"
                android:textColor="@color/strongText"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/change_pwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="修改密码"
                android:textColor="@color/strongText"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myMetting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/meeting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="我发起的会议"
                android:textColor="@color/strongText"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/face_manager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/face_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="人脸数据管理"
                android:textColor="@color/strongText"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="群组管理"
                android:textColor="@color/strongText"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@drawable/enter" />
        </LinearLayout>



        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/red_button"
            android:text="退出登陆"
            android:textColor="@color/light"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>